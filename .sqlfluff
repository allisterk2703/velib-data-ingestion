[sqlfluff]
dialect = trino
templater = dbt
runaway_limit = 10
max_line_length = 120
ignore = templating

[sqlfluff:templater:dbt]
project_dir = ./dbt/velib_dbt
profiles_dir = ./dbt/velib_dbt
profile = velib_dbt
target = dev

[sqlfluff:indentation]
tab_width = 4
indent_unit = space

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = upper

[sqlfluff:rules:aliasing.table]
aliasing = explicit

[sqlfluff:rules:references.quoting]
quoted_identifiers_policy = none